			<groupId>net.lightbody.bmp</groupId>
			<artifactId>browsermob-core</artifactId>
			<version>2.1.5</version>
		</dependency>

	</dependencies>

	<!--maven的插件 -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<fork>true</fork>
				</configuration>
			</plugin>
			<!--打springboot的jar包 package -->
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
						<configuration>
							<mainClass>com.alibaba.Application</mainClass>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<mainClass>com.alibaba.Application</mainClass>
				</configuration>
			</plugin>
			<!--封装成docker镜像文件 clean package docker:build -Dspring.profiles.active=test -Dmaven.test.skip=true-->
		</plugins>
		<defaultGoal>compile</defaultGoal>
	</build>

</project>